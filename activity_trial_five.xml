<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jumbledwords.TrialFive" >

    <ImageButton
        android:id="@+id/t5_b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/blank" />

    <ImageButton
        android:id="@+id/t5_b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t5_b1"
        android:background="@null"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/t5_b1"
        android:src="@drawable/blank" />

    <ImageButton
        android:id="@+id/t5_b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t5_b2"
        android:background="@null"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/t5_b2"
        android:src="@drawable/blank" />
    <ImageButton
        android:id="@+id/t5_b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t5_b3"
        android:background="@null"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/t5_b3"
        android:src="@drawable/blank" />
    <ImageButton
        android:id="@+id/t5_b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t5_b4"
        android:background="@null"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/t5_b4"
        android:src="@drawable/blank" />

    <TextView
        android:id="@+id/t5_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/t5_b1"
        android:layout_centerVertical="true"
        android:text="_  _  _  _  _"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="150px"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/t5_bb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t5_tv"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@+id/t5_b5"
        android:src="@android:drawable/ic_menu_revert" />

    <ImageButton
        android:id="@+id/t5_bs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t5_bb"
        android:layout_toRightOf="@+id/t5_b5"
        android:src="@android:drawable/ic_menu_rotate" />
    
</RelativeLayout>
