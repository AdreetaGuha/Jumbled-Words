<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jumbledwords.Welcomepage" >

    <Button
        android:id="@+id/w_b2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="#FFFF00"
        android:textColor="#2A2A2A"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Help" />

    <Button
        android:id="@+id/w_b3"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textColor="#2A2A2A"
        android:background="#154095"
        android:layout_alignBottom="@+id/w_b2"
        android:layout_centerHorizontal="true"
        android:text="Settings" />

    <Button
        android:id="@+id/w_b4"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textColor="#2A2A2A"
        android:background="#FF0000"
        android:layout_alignBaseline="@+id/w_b3"
        android:layout_alignBottom="@+id/w_b3"
        android:layout_alignParentRight="true"
        android:text="Exit Game" />

    <Button
        android:id="@+id/w_b1"
        android:layout_width="110dp"
        android:textColor="#2A2A2A"
        android:layout_height="wrap_content"
        android:layout_above="@+id/w_b3"
        android:background="#5CDC07"
        android:layout_alignRight="@+id/w_b3"
        android:layout_marginBottom="31dp"
        android:text="Play" />
   
</RelativeLayout>
